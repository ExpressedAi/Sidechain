{
  "manifest_version": 3,

  "name": "__MSG_ext_name__",
  "description": "__MSG_ext_description__",

  "version": "9.2.1",
  "default_locale": "en",
  "icons": {
    "128": "img/icons/icon-128.png",
    "500": "img/icons/icon-500.png"
  },

  "background": {
    "service_worker": "/bg.js"
  },

  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["/cs.js"],
      "run_at": "document_start",
      "all_frames": true
    },
    {
      "matches": ["https://*.openai.com/*"],
      "js": ["/cs-openai.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],

  "permissions": [
    "alarms",
    "background",
    "browsingData",
    "cookies",
    "declarativeNetRequest",
    "notifications",
    "tabs",
    "storage",
    "offscreen",
    "scripting",
    "contextMenus"
  ],
  "host_permissions": ["*://*/*"],
  "optional_permissions": ["downloads"],
  "optional_host_permissions": ["<all_urls>"],

  "action": {
    "default_icon": {
      "48": "img/badges/badge-48-day.png"
    },
    "default_title": "SideChain | Your AI Companion"
  },

  "web_accessible_resources": [
    {
      "resources": [
        "oi.js",
        "nj.js",
        "nj.css",
        "nj-engine.js",
        "nj-engine.css",
        "nj-youtube.js",
        "nj-desktop.js",
        "js/timer-worker.js",
        "js/pdf.min.js",
        "js/pdf.worker.min.js",
        "img/misc/shortcut.svg",
        "img/commands/*.svg",
        "sidechain.html"
      ],
      "matches": ["*://*/*"]
    }
  ],

  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
